<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:id="@+id/InstruText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
        android:text="Instruction"
        tools:text="The calculator uses the four main Kinematic equations to help you solve any uniform acceleration problems.          Enter given information."
        android:textAppearance="@style/TextAppearance.AppCompat"/>
    <TextView
        android:text="InitialV"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/InitialVtext" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        tools:text="Initial Velocity" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/InstruText"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/InitialVimp"
        app:layout_constraintStart_toEndOf="@+id/InitialVtext"
        android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/InstruText"/>
    <TextView
        android:text="FinalV"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/FinalVtext" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/InitialVtext" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" tools:text="Final Velocity"/>
    <EditText
        android:layout_width="156dp"
        android:layout_height="25dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/FinalVimp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/InitialVimp" app:layout_constraintStart_toEndOf="@+id/FinalVtext"
        android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <TextView
        android:text="Acctext"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/Acctext"
        tools:text="Acceleration"
        android:layout_marginStart="4dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="4dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/FinalVtext"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/Accimp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/FinalVimp" app:layout_constraintStart_toEndOf="@+id/Acctext"
        android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <TextView
        android:text="Timetext"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/Timetext"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" tools:text="Time"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/Acctext"/>
    <EditText
        android:layout_width="156dp"
        android:layout_height="25dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/Timeimp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Accimp"
        app:layout_constraintStart_toEndOf="@+id/Timetext" android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"/>
    <TextView
        android:text="Disttext"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/Disttext"
        tools:text="Distance"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Timetext"/>
    <EditText
        android:layout_width="156dp"
        android:layout_height="25dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/Distimp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Timeimp" app:layout_constraintStart_toEndOf="@+id/Disttext"
        android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <Button
        android:text="Calculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/Calculate" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Distimp"/>
</android.support.constraint.ConstraintLayout>