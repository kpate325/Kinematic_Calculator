<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/Dispinp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="198dp"
        android:layout_marginRight="198dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/DispTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DispTxt"
        app:layout_constraintTop_toBottomOf="@+id/Timeinp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Enter given information."
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/InstruText"
        app:layout_constraintTop_toBottomOf="@+id/InstruText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="1dp"
        android:text='(In "Variable", type in "ivel" for initial velocity, "fvel" for final velocity, "accel" for acceleration, "time" for time, and "disp" for displacement.)'
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/VariableText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/InitialVinp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="200dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textColor="#ff000000"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/InitialVtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/InitialVtext"
        app:layout_constraintTop_toTopOf="@+id/InitialVtext" />

    <TextView
        android:id="@+id/Acctext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        android:text="Acceleration :"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Timeinp"
        app:layout_constraintEnd_toStartOf="@+id/Accinp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FinalVtext" />

    <TextView
        android:id="@+id/Results"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical|center"
        android:text="Result"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/equationResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/results" />

    <EditText
        android:id="@+id/Variableinp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="183dp"
        android:layout_marginRight="183dp"
        android:height="25dp"
        android:ems="70"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/VariableText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/VariableText"
        app:layout_constraintTop_toTopOf="@+id/VariableText" />

    <TextView
        android:id="@+id/InstruText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="293dp"
        android:text="The calculator uses the four main Kinematic equations to help you solve any uniform acceleration problems."
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Timetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DispTxt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="7dp"
        android:gravity="center_vertical"
        android:text="Displacement :"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/results"
        app:layout_constraintEnd_toStartOf="@+id/Dispinp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Timeinp" />

    <TextView
        android:id="@+id/FinalVtext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:text="Final Velocity :"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Acctext"
        app:layout_constraintEnd_toStartOf="@+id/FinalVinp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InitialVtext" />

    <Button
        android:id="@+id/results"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="buttonOnClick"
        android:text="GRAPH"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Results"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Calculate"
        app:layout_constraintTop_toBottomOf="@+id/DispTxt" />

    <Button
        android:id="@+id/Calculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="buttonOnClick"
        android:text="Calculate"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/results"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DispTxt" />

    <TextView
        android:id="@+id/InitialVtext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:text="Initial Velocity :"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/FinalVtext"
        app:layout_constraintEnd_toStartOf="@+id/InitialVinp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VariableText" />

    <EditText
        android:id="@+id/FinalVinp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="201dp"
        android:layout_marginRight="201dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Acctext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FinalVtext"
        app:layout_constraintTop_toTopOf="@+id/FinalVtext" />

    <TextView
        android:id="@+id/VariableText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        android:text="Variable to Find :"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/InitialVtext"
        app:layout_constraintEnd_toStartOf="@+id/Variableinp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/Accinp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="210dp"
        android:layout_marginRight="210dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textSize="18sp"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/Acctext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Acctext"
        app:layout_constraintTop_toBottomOf="@+id/FinalVinp" />

    <EditText
        android:id="@+id/Timeinp"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/DispTxt"
        app:layout_constraintEnd_toEndOf="@+id/Dispinp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Acctext" />

    <TextView
        android:id="@+id/Timetext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="281dp"
        android:gravity="center_vertical"
        android:text="Time :"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Dispinp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InstruText" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="By Keyur Patel and Yonghun Chang"
        android:textAllCaps="false"
        android:textColor="#ff000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equationResult" />

    <TextView
        android:id="@+id/equationResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="44dp"
        android:gravity="center_vertical|center"
        android:text="Used Equation"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Results" />

</android.support.constraint.ConstraintLayout>
